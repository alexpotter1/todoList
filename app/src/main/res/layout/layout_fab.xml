<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_frameFab"
    android:layout_marginTop="?attr/actionBarSize"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabAddTaskItem"
        android:gravity="center_vertical"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="150sp"
        android:layout_marginRight="8sp">

        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginEnd="5sp"
            fab:cardBackgroundColor="@color/cardView_bg_colour"
            fab:cardUseCompatPadding="true"
            fab:cardCornerRadius="@dimen/cardview_default_radius"
            fab:cardElevation="@dimen/cardview_default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fabAddTaskItem_cardView_text"
                android:text="@string/fab_addTask_text"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:paddingRight="8sp"
                android:paddingBottom="3sp"
                android:paddingTop="3sp"
                android:paddingLeft="8sp"/>

        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fabAddTaskItem_button"
            android:src="@drawable/ic_add_black_24dp"
            android:tint="@android:color/white"
            android:layout_marginRight="8sp"
            android:layout_marginBottom="8sp"
            android:layout_marginTop="8sp"
            fab:fabSize="mini">

        </android.support.design.widget.FloatingActionButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabDeleteAllItem"
        android:gravity="center_vertical"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="90sp"
        android:layout_marginRight="8sp">

        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginEnd="5sp"
            fab:cardBackgroundColor="@color/cardView_bg_colour"
            fab:cardUseCompatPadding="true"
            fab:cardCornerRadius="@dimen/cardview_default_radius"
            fab:cardElevation="@dimen/cardview_default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fabDeleteAllItem_cardView_text"
                android:text="@string/fab_deleteAll_text"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:paddingRight="8sp"
                android:paddingBottom="3sp"
                android:paddingTop="3sp"
                android:paddingLeft="8sp"/>

        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fabDeleteAllItem_button"
            android:src="@drawable/ic_delete_black_24dp"
            android:tint="@android:color/white"
            android:layout_marginRight="8sp"
            android:layout_marginBottom="8sp"
            android:layout_marginTop="8sp"
            fab:fabSize="mini">

        </android.support.design.widget.FloatingActionButton>

    </LinearLayout>

</FrameLayout>